---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description: string;
  canonical: string;
  accent?: "blue" | "red";
  ogTitle?: string;
  ogDescription?: string;
  ogImage?: string;
}

const baseUrl = import.meta.env.BASE_URL;
const siteOrigin = Astro.url.origin;
const fullBase = (siteOrigin + baseUrl).replace(/\/*$/, "/");
const {
  title,
  description,
  canonical,
  accent = "blue",
  ogTitle = title,
  ogDescription = description,
  ogImage = `${siteOrigin}${baseUrl}og/og-home.svg`
} = Astro.props;
---
<!doctype html>
<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={ogDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="ru_RU" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={ogTitle} />
    <meta name="twitter:description" content={ogDescription} />
    <meta name="twitter:image" content={ogImage} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet" />
    <link rel="icon" href={`${fullBase}favicon.svg`} type="image/svg+xml" />
    <link rel="icon" href={`${fullBase}favicon.ico`} sizes="any" />
    <link rel="icon" href={`${fullBase}favicon-96x96.png`} type="image/png" sizes="96x96" />
    <link rel="apple-touch-icon" href={`${fullBase}apple-touch-icon.png`} />
    <meta name="theme-color" content="#05070b" />
  </head>
  <body style={`--accent: var(--${accent});`} class="bg-bg text-text" id="body-el">
    <Header />
    <main class="main-with-fixed-header">
      <slot />
    </main>
    <Footer />
    <script type="module">
      const overlay = document.querySelector('[data-menu-overlay]');
      const toggle = document.querySelector('[data-menu-toggle]');
      const closeButtons = document.querySelectorAll('[data-menu-close]');
      const links = document.querySelectorAll('[data-menu-link]');
      const menuContent = document.querySelector('[data-menu-content]');

      const closeMenu = () => {
        overlay?.classList.remove('is-open');
        document.body.style.overflow = '';
        document.body.classList.remove('menu-open');
      };

      toggle?.addEventListener('click', () => {
        const isOpen = overlay?.classList.contains('is-open');
        if (isOpen) closeMenu();
        else {
          overlay?.classList.add('is-open');
          document.body.style.overflow = 'hidden';
          document.body.classList.add('menu-open');
        }
      });

      closeButtons.forEach((btn) => btn.addEventListener('click', closeMenu));
      links.forEach((link) => link.addEventListener('click', closeMenu));
      overlay?.addEventListener('click', (event) => {
        if (event.target === overlay) closeMenu();
      });
      menuContent?.addEventListener('click', (event) => event.stopPropagation());
      document.addEventListener('keydown', (event) => {
        if (event.key === 'Escape') closeMenu();
      });

      // Во время скролла останавливать тяжёлые анимации — убирает лаги в верхней части
      (function () {
        const body = document.getElementById('body-el');
        if (!body) return;
        let scrollEndTimer = 0;
        const SCROLL_END_MS = 120;
        function onScroll() {
          body.classList.add('is-scrolling');
          if (scrollEndTimer) clearTimeout(scrollEndTimer);
          scrollEndTimer = window.setTimeout(() => {
            body.classList.remove('is-scrolling');
            scrollEndTimer = 0;
          }, SCROLL_END_MS);
        }
        window.addEventListener('scroll', onScroll, { passive: true });
      })();

      const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      if (!prefersReduced) {
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add('is-visible');
                observer.unobserve(entry.target);
              }
            });
          },
          { threshold: 0.12, rootMargin: '0px 0px -40px 0px' }
        );

        document.querySelectorAll('.reveal').forEach((el) => observer.observe(el));
      } else {
        document.querySelectorAll('.reveal').forEach((el) => el.classList.add('is-visible'));
      }

      // Active nav link from actual URL (fixes production base path / trailing slash)
      (function setActiveNav() {
        const header = document.querySelector('.site-header');
        if (!header) return;
        const basePath = (header.getAttribute('data-base-path') || '').replace(/\/$/, '');
        let pathname = window.location.pathname || '/';
        if (basePath && pathname.startsWith(basePath)) {
          pathname = pathname.slice(basePath.length) || '/';
        }
        const currentPath = ('/' + pathname.replace(/^\/+|\/+$/g, '').replace(/\/index\.html$/i, '')).replace(/\/+/g, '/') || '/';
        document.querySelectorAll('.site-header [data-nav-path]').forEach((a) => {
          const path = a.getAttribute('data-nav-path') || '';
          const isActive = currentPath === path || (currentPath === '/' && path === '/');
          if (isActive) a.setAttribute('aria-current', 'page');
          else a.removeAttribute('aria-current');
          const isMobileLink = a.hasAttribute('data-menu-link');
          if (isActive) {
            a.classList.add('text-text');
            a.classList.remove('text-muted');
            if (isMobileLink) a.classList.add('bg-white/10');
          } else {
            a.classList.remove('text-text');
            a.classList.add('text-muted');
            if (isMobileLink) a.classList.remove('bg-white/10');
          }
        });
      })();
    </script>
  </body>
</html>
