---
import { Icon } from "astro-icon/components";

interface Item {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  items: Item[];
}

const { items } = Astro.props;
---
<div class="grid gap-3 sm:grid-cols-2 reveal-stagger">
  {items.map((item) => (
    <div class="card-surface card-surface-interactive group flex items-center gap-4 p-4 reveal">
      <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-xl bg-gradient-to-br from-blue/20 to-violet/20 text-blue transition group-hover:from-blue/30 group-hover:to-violet/30">
        <Icon name={item.icon} class="h-5 w-5" aria-hidden="true" />
      </div>
      <div class="min-w-0">
        <h3 class="text-lg font-semibold leading-tight text-text">{item.title}</h3>
        <p class="mt-1 text-sm leading-snug text-muted">{item.description}</p>
      </div>
    </div>
  ))}
</div>
