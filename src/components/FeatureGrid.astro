---
import { Icon } from "astro-icon/components";

interface Item {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  items: Item[];
}

const { items } = Astro.props;
---
<div class="grid gap-4 md:grid-cols-3">
  {items.map((item) => (
    <div class="card-surface p-5 text-sm text-muted reveal">
      <div class="flex items-center gap-3">
        <span class="flex h-10 w-10 items-center justify-center rounded-2xl border border-stroke/70 bg-black/20 text-accent">
          <Icon name={item.icon} class="h-5 w-5" aria-hidden="true" />
        </span>
        <p class="text-base font-semibold text-text">{item.title}</p>
      </div>
      <p class="mt-3 text-sm text-muted">{item.description}</p>
    </div>
  ))}
</div>
