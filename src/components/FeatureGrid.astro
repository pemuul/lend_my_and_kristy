---
import { Icon } from "astro-icon/components";

interface Item {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  items: Item[];
}

const { items } = Astro.props;
---
<div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3 reveal-stagger">
  {items.map((item) => (
    <div class="card-surface card-surface-interactive group flex flex-col p-6 reveal">
      <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-gradient-to-br from-blue/20 to-violet/20 text-blue transition group-hover:from-blue/30 group-hover:to-violet/30">
        <Icon name={item.icon} class="h-6 w-6" aria-hidden="true" />
      </div>
      <h3 class="mt-4 text-lg font-semibold text-text">{item.title}</h3>
      <p class="mt-2 text-sm leading-relaxed text-muted">{item.description}</p>
    </div>
  ))}
</div>
