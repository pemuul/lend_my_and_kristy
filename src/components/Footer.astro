---
const year = new Date().getFullYear();
const baseUrl = import.meta.env.BASE_URL;
const withBase = (path: string) => {
  const normalizedPath = path.startsWith("/") ? path : `/${path}`;
  return `${baseUrl.replace(/\/$/, "")}${normalizedPath}`;
};
---
<footer class="border-t border-stroke/60">
  <div class="container-tight flex flex-col gap-4 py-6 text-sm text-muted md:flex-row md:items-center md:justify-between">
    <span>© {year} Окей Кристи Production</span>
    <div class="flex gap-4">
      <a href={withBase("/")} class="hover:text-text transition-colors focus-ring">Главная</a>
      <a href={withBase("/kristina")} class="hover:text-text transition-colors focus-ring">Кристина</a>
      <a href={withBase("/ivan")} class="hover:text-text transition-colors focus-ring">Роман</a>
    </div>
  </div>
</footer>
