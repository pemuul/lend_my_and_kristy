---
const year = "2026";
const baseUrl = import.meta.env.BASE_URL;
const withBase = (path: string) => `${baseUrl.replace(/\/$/, "")}/${path.replace(/^\//, "")}`;
---
<footer class="border-t border-stroke/60">
  <div class="container-tight flex flex-col gap-4 py-6 text-sm text-muted md:flex-row md:items-center md:justify-between">
    <span>© {year} Окей Кристи Production</span>
    <div class="flex gap-4">
      <a href={withBase("/")} class="hover:text-text transition-colors focus-ring">Главная</a>
      <a href={withBase("/contact")} class="hover:text-text transition-colors focus-ring">Контакты</a>
      <a href="https://t.me/Pemuul" class="hover:text-text transition-colors focus-ring">Telegram Жданова Романа</a>
    </div>
  </div>
</footer>
