---
interface Props {
  title: string;
  subtitle?: string;
  overline?: string;
  id?: string;
  className?: string;
  alt?: boolean;
}

const { title, subtitle, overline, id, className, alt = false } = Astro.props;
---
<section id={id} class:list={["section-spacing", alt && "section-alt", className ?? ""]}>
  <div class={alt ? "container-tight relative" : "container-tight"}>
    <div class="reveal">
      {overline && <p class="overline mb-3">{overline}</p>}
      <h2 class="text-2xl font-bold tracking-tight text-text sm:text-3xl lg:text-4xl">{title}</h2>
      {subtitle && (
        <p class="mt-4 max-w-2xl text-base text-muted sm:text-lg">{subtitle}</p>
      )}
    </div>
    <div class="mt-10 lg:mt-12">
      <slot />
    </div>
  </div>
</section>
