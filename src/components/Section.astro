---
interface Props {
  title: string;
  subtitle?: string;
  id?: string;
  className?: string;
}

const { title, subtitle, id, className } = Astro.props;
---
<section id={id} class={`section-spacing ${className ?? ""}`}>
  <div class="container-tight">
    <div class="reveal">
      <h2 class="text-2xl font-semibold text-text sm:text-3xl">{title}</h2>
      {subtitle && (
        <p class="mt-3 max-w-2xl text-base text-muted sm:text-lg">{subtitle}</p>
      )}
    </div>
    <div class="mt-8">
      <slot />
    </div>
  </div>
</section>
