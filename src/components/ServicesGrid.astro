---
import { Icon } from "astro-icon/components";

interface Item {
  title: string;
  description?: string;
  icon?: string;
}

interface Props {
  items: Item[];
  columns?: number;
}

const { items, columns = 2 } = Astro.props;
const colClass = columns === 3 ? "md:grid-cols-3" : columns === 4 ? "md:grid-cols-2 lg:grid-cols-4" : "md:grid-cols-2";
---
<div class={`grid gap-4 ${colClass}`}>
  {items.map((item) => (
    <div class="card-surface p-5 text-sm text-muted reveal">
      <div class="flex items-center gap-3">
        {item.icon && (
          <span class="flex h-10 w-10 items-center justify-center rounded-2xl border border-stroke/70 bg-black/20 text-accent">
            <Icon name={item.icon} class="h-5 w-5" aria-hidden="true" />
          </span>
        )}
        <p class="text-base font-semibold text-text">{item.title}</p>
      </div>
      {item.description && <p class="mt-3 text-sm text-muted">{item.description}</p>}
    </div>
  ))}
</div>
