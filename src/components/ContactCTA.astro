---
interface Props {
  title: string;
  text: string;
  primaryLabel: string;
  primaryHref: string;
  secondaryLabel: string;
  secondaryHref: string;
}

const { title, text, primaryLabel, primaryHref, secondaryLabel, secondaryHref } = Astro.props;
---
<section id="contact" class="section-spacing">
  <div class="container-tight">
    <div class="card-surface p-7 md:p-10">
      <div class="reveal">
        <h2 class="text-2xl font-semibold text-text sm:text-3xl">{title}</h2>
        <p class="mt-3 text-base text-muted sm:text-lg">{text}</p>
      </div>
      <div class="mt-6 flex flex-col gap-3 sm:flex-row">
        <a class="button button-primary focus-ring" href={primaryHref}>{primaryLabel}</a>
        <a class="button button-secondary focus-ring" href={secondaryHref}>{secondaryLabel}</a>
      </div>
    </div>
  </div>
</section>
