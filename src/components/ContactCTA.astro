---
interface Props {
  title: string;
  text: string;
  primaryLabel: string;
  primaryHref: string;
  secondaryLabel: string;
  secondaryHref: string;
  showForm?: boolean;
  formAction?: string;
  phoneLabel?: string;
  phoneHref?: string;
}

const {
  title,
  text,
  primaryLabel,
  primaryHref,
  secondaryLabel,
  secondaryHref,
  showForm = false,
  formAction = "",
  phoneLabel,
  phoneHref
} = Astro.props;
---
<section id="contact" class="section-spacing">
  <div class="container-tight">
    <div class="card-surface p-7 md:p-10">
      <div class="grid gap-8 lg:grid-cols-[1.1fr_0.9fr] lg:items-start">
        <div class="reveal">
          <h2 class="text-2xl font-semibold text-text sm:text-3xl">{title}</h2>
          <p class="mt-3 text-base text-muted sm:text-lg">{text}</p>
          <div class="mt-6 flex flex-col gap-3 sm:flex-row">
            <a class="button button-primary focus-ring w-full sm:w-auto" href={primaryHref}>{primaryLabel}</a>
            <a class="button button-secondary focus-ring w-full sm:w-auto" href={secondaryHref}>{secondaryLabel}</a>
          </div>
          {phoneLabel && phoneHref && (
            <p class="mt-4 text-sm text-muted">
              Телефон: <a class="text-text underline decoration-dotted" href={phoneHref}>{phoneLabel}</a>
            </p>
          )}
          <p class="mt-4 text-xs uppercase tracking-[0.2em] text-muted">Среднее время ответа: 2–4 часа</p>
        </div>
        {showForm && (
          <form
            class="grid gap-4 rounded-2xl border border-stroke/70 bg-black/20 p-5 sm:p-6"
            action={formAction}
            method="post"
            enctype="text/plain"
          >
            <div>
              <label class="text-sm font-medium text-text">Имя</label>
              <input class="input-field mt-2" name="name" type="text" placeholder="Как к вам обращаться" autocomplete="name" required />
            </div>
            <div>
              <label class="text-sm font-medium text-text">Контакт</label>
              <input class="input-field mt-2" name="contact" type="text" placeholder="Telegram, телефон или email" autocomplete="email" required />
            </div>
            <div>
              <label class="text-sm font-medium text-text">Сообщение</label>
              <textarea
                class="input-field mt-2 min-h-[120px]"
                name="message"
                placeholder="Коротко о задаче"
                required
              ></textarea>
            </div>
            <button class="button button-primary w-full" type="submit">Отправить</button>
          </form>
        )}
      </div>
    </div>
  </div>
</section>
