---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHero from "../components/PageHero.astro";

const baseUrl = import.meta.env.BASE_URL;
const withBase = (path: string) => `${baseUrl.replace(/\/$/, "")}/${path.replace(/^\//, "")}`;

const title = "Контакты — Исследование ИИ и АСУ";
const description = "Свяжитесь с командой исследования: Telegram, телефон, заявка на аудит.";
const siteUrl = "https://pemuul.github.io/lend_my_and_kristy";
const canonical = `${siteUrl}/contact`;
const ogImage = `${siteUrl}/og/og-contact.svg`;
---
<BaseLayout title={title} description={description} canonical={canonical} ogImage={ogImage} accent="blue">
  <PageHero overline="Контакты" title="Свяжитесь с нами" subtitle="Ответим в течение 2–3 рабочих дней." />
  <section class="section-spacing">
    <div class="container-tight">
      <div class="card-surface p-8 sm:p-12 max-w-2xl">
        <div class="reveal">
          <p class="text-base text-muted sm:text-lg">
            Напишите в удобный канал или оставьте заявку на аудит за 30 000 ₽.
          </p>
          <div class="mt-8 flex flex-col gap-4 sm:flex-row sm:flex-wrap">
            <a class="button button-primary focus-ring" href="https://t.me/okay_kristi">Telegram @okay_kristi</a>
            <a class="button button-secondary focus-ring" href="tel:+79539744545">+7 953 974 4545</a>
          </div>
          <div class="mt-10 rounded-xl border border-stroke bg-white/5 p-5">
            <p class="font-semibold text-text">Подать заявку на аудит за 30 000 ₽</p>
            <p class="mt-2 text-sm text-muted">
              Напишите в Telegram или по телефону. Либо укажите в опроснике интерес к аудиту — с вами свяжутся после обработки ответов.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
